{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es2019"],
    "declaration": false,
    "outDir": "./build",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}
